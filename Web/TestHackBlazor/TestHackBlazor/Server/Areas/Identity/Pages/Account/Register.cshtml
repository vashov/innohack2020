            <label class="form-check-label" asp-for="Input.TermsAndConditions"></label>
            <p>
                <span asp-validation-for="Input.TermsAndConditions" class="text-danger"></span>
            </p>
        </div>*@

            <button type="submit" class="btn btn-primary">Регистрация</button>
        </form>
    </div>
